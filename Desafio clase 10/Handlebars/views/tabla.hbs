<section class="m-5">
    {{#if productos.length > 0}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each product in productos}}
            <tr>
                <th scope="row">
                    {{productos.id }}
                </th>
                <td>
                    {{productos.nombre }}
                </td>
                <td>
                    {{productos.precio}}
                </td>
                <td><img src="{{productos.thumbnail}}" class="w-25 h-auto"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-danger" role="alert">
        <p>{{mensaje}}</p>
    </div>
    {{/if}}
</section>